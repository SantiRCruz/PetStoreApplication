<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_list_pets">

    <fragment
        android:id="@+id/navigation_list_pets"
        android:name="com.example.petstoreapplication.ui.listPets.ListPetsFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_create"
        android:name="com.example.petstoreapplication.ui.create.CreateFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_update"
        android:name="com.example.petstoreapplication.ui.update.UpdateFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />
    <fragment
        android:id="@+id/navigation_delete"
        android:name="com.example.petstoreapplication.ui.delete.DeleteFragment"
        android:label="fragment_delete"
        tools:layout="@layout/fragment_delete" />
</navigation>